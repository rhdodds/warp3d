       real (h_prec), allocatable :: cohes_temp_ref(:)        ! (mxvl)
       real (h_prec), allocatable :: cohes_dtemp(:)           ! (mxvl)
       real (h_prec), allocatable :: cohes_temp_n(:)          ! (mxvl)
       real (h_prec), allocatable :: nu_vec(:)                ! (mxvl)
       real (h_prec), allocatable :: beta_vec(:)              ! (mxvl)
