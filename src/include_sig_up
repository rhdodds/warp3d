       real (h_prec), allocatable :: dtemps_node_blk(:,:)     ! (mxvl,mxndel)
       real (h_prec), allocatable :: temps_ref_node_blk(:,:)  ! (mxvl,mxndel)
       real (h_prec), allocatable :: temps_node_blk(:,:)      ! (mxvl,mxndel)
